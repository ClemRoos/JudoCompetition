<Window x:Class="CompetitionJudo.UI.FenetreImpression"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Impression" 
        Height="700" 
        Width="580"
        Icon="/Resources/logoJCV.png" 
        Background="WhiteSmoke"
        WindowStyle="ThreeDBorderWindow"
        FontFamily="Segoe UI Light" 
        FontSize="16" >

    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#3271EA" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="wrapper"
                                Background="#01000000">
                            <Border Name="inner"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E8FF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="MyButtonValidateStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#44C265" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate 
                TargetType="{x:Type Button}">
                        <Border 
                    Name="wrapper"
                    Background="#01000000">
                            <Border 
                        Name="inner"
                        Background="{TemplateBinding Background}">
                                <ContentPresenter 
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DA88"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <GroupBox 
        BorderThickness="2"
        BorderBrush="#1976D2" 
        Foreground="#1976D2" 
        Margin="5,5,5,5" 
        Header="Impression">
        
        <StackPanel 
            x:Name="baseStackPanel" 
            Margin="5,5,5,5" 
            VerticalAlignment="Top">        
            <StackPanel 
                x:Name="teteStackPanel" 
                Orientation="Horizontal" 
                Margin="5,5,5,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom">
                <TextBlock VerticalAlignment="Bottom" Text="Groupe n° "></TextBlock>
                <ComboBox MinWidth="40" Name="ComboBoxListeGroupes" ItemsSource="{Binding Mode=OneWay}" SelectionChanged="ListeGroupes_SelectionChanged" VerticalContentAlignment="Center"/>
                <Button 
                    x:Name="BoutonPouleToTableau" 
                    IsEnabled="True"
                    Click="BoutonPouleToTableau_Click" 
                    Margin="5,0"
                    Style="{StaticResource MyButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image Name="ImagePoule" Source="/Resources/Poule_White.png" Width="40" Height="40" Margin="5,0" />
                        <TextBlock Name="LabelPoule" Text="Poule" VerticalAlignment="Center" Margin="5,0,5,0" />
                        <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}" ></Separator>
                        <TextBlock Name="LabelTableau" Text="Tableau" VerticalAlignment="Center" Margin="5,0,5,0"/>
                        <Image Name="ImageTableau" Source="/Resources/Tableau_White.png" Width="40" Height="40" Margin="5,0" />
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel  Margin="5,0">
                <ListView x:Name="tableauCompetiteurs"  ItemsSource="{Binding}" >
                    <ListView.View>
                        <GridView>
                            <GridView.ColumnHeaderContainerStyle>
                                <Style TargetType="GridViewColumnHeader">
                                    <Setter Property="Height" Value="35" />
                                    <Setter Property="Background" Value="#3271EA" />
                                    <Setter Property="Foreground" Value="White" />
                                    <Setter Property="BorderBrush" Value="Black" />
                                    <Setter Property="BorderThickness" Value="1" />
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#1976fe"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </GridView.ColumnHeaderContainerStyle>

                            <GridViewColumn Header="Nom" DisplayMemberBinding="{Binding Nom}" />
                            <GridViewColumn Header="Prénom" DisplayMemberBinding="{Binding Prenom}" />
                            <GridViewColumn Header="Club" DisplayMemberBinding="{Binding Club}" />
                            <GridViewColumn Header="Poids" DisplayMemberBinding="{Binding Poids}" />
                            <GridViewColumn Header="Catégorie" DisplayMemberBinding="{Binding Categorie}" />
                        </GridView>
                    </ListView.View>
                </ListView>
                <StackPanel  
                    Orientation="Horizontal" 
                    Margin="0,5"
                    HorizontalAlignment="Center">
                    <Button 
                        Width="230"
                        Height="40"
                        x:Name="BoutonImprimerUnSeulGroupe" 
                        Click="BoutonImprimerUnSeulGroupe_Click"
                        Style="{StaticResource MyButtonValidateStyle}">
                        <StackPanel Orientation="Horizontal">
                                <Image Name="ImageSingle" Source="/Resources/PrintOne_White.png" Width="25" Height="35" Margin="5,0" />
                            <TextBlock Text="Imprimer Le Groupe" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button 
                        Width="230" 
                        Height="40"
                        x:Name="BoutonImprimerTousLesGroupes" 
                        Click="BoutonImprimerTousLesGroupes_Click" 
                        Margin="5,0"
                        Style="{StaticResource MyButtonValidateStyle}">
                        <StackPanel Orientation="Horizontal">
                                <Image Name="ImageMultiple" Source="/Resources/PrintMultiple_White.png" Width="30" Height="40" Margin="5,0" />
                            <TextBlock Text="Imprimer tous les groupes" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </StackPanel>       

    </StackPanel>
    </GroupBox>
</Window>
