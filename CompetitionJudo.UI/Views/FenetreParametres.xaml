<Window x:Class="CompetitionJudo.UI.FenetreParametres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres" 
        Height="350" 
        Width="450"
        Background="WhiteSmoke" 
        FontFamily="Segoe UI Light" 
        FontSize="16"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#3271EA" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="wrapper"
                                Background="#01000000">
                            <Border Name="inner"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E8FF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="MyButtonValidateStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#44C265" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate 
                TargetType="{x:Type Button}">
                        <Border 
                    Name="wrapper"
                    Background="#01000000">
                            <Border 
                        Name="inner"
                        Background="{TemplateBinding Background}">
                                <ContentPresenter 
                            Margin="{TemplateBinding Padding}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DA88"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <GroupBox 
        BorderThickness="2"
        BorderBrush="#1976D2" 
        Foreground="#1976D2"
        Header="Paramètres" 
        Margin="5,5,5,5" >

        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                <Label Content="Catégorie"  />
                <ComboBox Name="ListeCategories" 
                          ItemsSource="{Binding ListeCategories}" 
                          SelectionChanged="ListeCategories_SelectionChanged"  
                          Width="120" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                <Label Content="Nombre de Judokas par poule" />
                <ComboBox 
                    Name="ListeNombreJudokasParPoule" 
                    SelectedValuePath="Content" >
                    <ComboBoxItem Content="2"/>
                    <ComboBoxItem Content="3"/>
                    <ComboBoxItem Content="4"/>
                    <ComboBoxItem Content="5"/>
                    <ComboBoxItem Content="6"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                <Label Content="Temps combat" />
                <TextBox IsReadOnly="True" Text="{Binding TempsCombatMinutes}" Width="30" />
                <TextBlock 
                    VerticalAlignment="Bottom" 
                    Text="m" />
                <StackPanel>
                    <Button 
                        Name="UpMinute" 
                        Click="UpMinute_Click">
                        <StackPanel >
                            <Image Source="/Resources/Up.png" Width="10"></Image>
                        </StackPanel>
                    </Button>
                    <Button 
                        Name="DownMinute" 
                        Click="DownMinute_Click">
                        <StackPanel >
                            <Image Source="/Resources/down.png" Width="10" ></Image>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <TextBox IsReadOnly="True" Text="{Binding TempsCombatSecondes}" Width="30" />
                <StackPanel>
                    <Button 
                        Name="UpSecondes" 
                        Click="UpSecondes_Click">
                        <StackPanel >
                            <Image Source="/Resources/Up.png" Width="10"></Image>
                        </StackPanel>
                    </Button>
                    <Button 
                        Name="DownSecondes" 
                        Click="DownSecondes_Click" >
                        <StackPanel >
                            <Image Source="/Resources/down.png" Width="10" ></Image>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock 
                    VerticalAlignment="Bottom" 
                    Text="s" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                <Label Content="Temps d'immobilisation (Ippon)" />

                <TextBox
                    IsReadOnly="True" 
                    Text="{Binding TempsImmoSecondes}" 
                    Width="30" />
                <StackPanel>
                    <Button 
                        Name="UpSecondesImmo" 
                        Click="UpSecondesImmo_Click">
                        <StackPanel >
                            <Image Source="/Resources/Up.png" Width="10"></Image>
                        </StackPanel>
                    </Button>
                    <Button 
                        Name="DownSecondesImmo" 
                        Click="DownSecondesImmo_Click">
                        <StackPanel >
                            <Image Source="/Resources/down.png" Width="10" ></Image>
                        </StackPanel>
                    </Button>
                </StackPanel>
                <TextBlock 
                    VerticalAlignment="Bottom" 
                    Text="s" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5">
                <Label Content="Echelle Impression (DPI)"/>
                <ComboBox 
                    Name="ListeEchelleImpression" 
                    SelectedValuePath="Content" 
                    HorizontalAlignment="Left" >
                    <ComboBoxItem Content="75"/>
                    <ComboBoxItem Content="100"/>
                    <ComboBoxItem Content="125"/>
                    <ComboBoxItem Content="150"/>
                    <ComboBoxItem Content="175"/>
                </ComboBox>
                <Label Content="%"/>

                <Button  
                    BorderThickness="0"
                    Background="WhiteSmoke"
                    Margin="20,0,0,0" 
                    ToolTipService.InitialShowDelay="0" 
                    ToolTip="Le changement de l'échelle d'impression peut résoudre des problèmes de décalage d'impression. &#x0a;Le changement d'échelle nécessite de sauvegarder et de redémarrer le programme afin d'être pris en compte.">
                    <Image  Source="/Resources/Warning.png" Width="25" Height="25"/>
                </Button>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button 
                    x:Name="ButtonOk" 
                    HorizontalAlignment="Left" 
                    Width="120"  
                    Height="40"
                    Click="ButtonOk_Click"
                    Style="{StaticResource MyButtonValidateStyle}" 
                    Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <Image  Source="/Resources/Valid_White.png" Width="25" Height="25" />
                        <TextBlock Text="Valider" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button 
                    x:Name="ButtonAnnuler" 
                    HorizontalAlignment="Left" 
                    Width="120" 
                    Height="40"
                    Click="ButtonAnnuler_Click"
                    Style="{StaticResource MyButtonStyle}"
                    Margin="5,0">
                    <StackPanel Orientation="Horizontal">
                        <Image  Source="/Resources/Cancel_White.png" Width="25" Height="25" Margin="5,0"/>
                        <TextBlock Text="Annuler" VerticalAlignment="Center"/>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</Window>
