<Window x:Class="CompetitionJudo.UI.Fenetre_Stats"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stats" 
        VerticalAlignment="Stretch" 
        Width="500"
        Background="WhiteSmoke" 
        FontFamily="Segoe UI Light" 
        WindowStyle="ThreeDBorderWindow"
        FontSize="16" >

    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#3271EA" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="wrapper"
                                Background="#01000000">
                            <Border Name="inner"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E8FF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyButtonValidateStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#44C265" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate 
 TargetType="{x:Type Button}">
                        <Border 
     Name="wrapper"
     Background="#01000000">
                            <Border 
         Name="inner"
         Background="{TemplateBinding Background}">
                                <ContentPresenter 
             Margin="{TemplateBinding Padding}"
             HorizontalAlignment="Center"
             VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DA88"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <GroupBox 
        BorderThickness="2"
        BorderBrush="#1976D2" 
        Foreground="#1976D2"
        Header="Résultats" 
        Margin="5,5,5,5" 
        HorizontalAlignment="Stretch" 
        VerticalAlignment="Stretch">
        
        <StackPanel Orientation="Vertical" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
            <DataGrid Name="GrilleResultats"  Margin="5,5,5,5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ItemsSource="{Binding ResultatClubs}" CanUserAddRows="False" AutoGenerateColumns="False" CanUserReorderColumns="True" CanUserSortColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Résultat"  Width="1.2*"  Binding="{Binding Place}" />
                    <DataGridTextColumn Header="Club"  Width="2*"  Binding="{Binding Club}" />
                    <DataGridTextColumn Header="Moyenne résultats"  Width="2.5*"  Binding="{Binding PlaceMoyenne}" />
                    <DataGridTextColumn Header="Nombre d'engagés"  Width="3*"  Binding="{Binding NombreEngages}" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button 
                    Name="ButtonImprimerStats" 
                    HorizontalAlignment="Right" 
                    Width="120" 
                    Margin="10,0" 
                    Height="40" 
                    Click="ButtonImprimerStats_Click" 
                    Style="{StaticResource MyButtonValidateStyle}">
                    
                    <StackPanel Orientation="Horizontal">
                        <Image  Source="/Resources/Print_White.png" Width="25" Height="25" Margin="5,0"/>
                        <TextBlock Text="Imprimer" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button 
                    Name="ButtonAnnuler" 
                    HorizontalAlignment="Right" 
                    Width="120" 
                    Margin="10,0" 
                    Height="40" 
                    Click="ButtonAnnuler_Click"
                    Style="{StaticResource MyButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <Image  Source="/Resources/Cancel_White.png" Width="25" Height="25" Margin="5,0"/>
                        <TextBlock Text="Annuler" VerticalAlignment="Center"></TextBlock>
                    </StackPanel>
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </StackPanel>
    </GroupBox>
</Window>
