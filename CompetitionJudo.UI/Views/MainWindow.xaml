<Window x:Name="FenetreChoixCompetition" x:Class="CompetitionJudo.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Judo Compétition"
        Height="450"
        Width="390" 
        Foreground="Black" 
        Background="WhiteSmoke"
        FontFamily="Segoe UI"
        ResizeMode="CanMinimize" 
        FontSize="16"
        WindowStyle="ThreeDBorderWindow"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#3271EA" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="wrapper"
                                Background="#01000000">
                            <Border Name="inner"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E8FF8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyButtonValidateStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#44C265" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate 
         TargetType="{x:Type Button}">
                        <Border 
             Name="wrapper"
             Background="#01000000">
                            <Border 
                 Name="inner"
                 Background="{TemplateBinding Background}">
                                <ContentPresenter 
                     Margin="{TemplateBinding Padding}"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DA88"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
    </Window.Resources>

    <GroupBox Header="Compétition" 
              HorizontalAlignment="Center"  
              VerticalAlignment="Top"  
              Width="360" 
              BorderThickness="2"
              BorderBrush="#1976D2">
        <GroupBox.HeaderTemplate>
            <DataTemplate>
                <Grid>
                    <Label Content="{Binding}" 
                           HorizontalAlignment="Stretch" 
                           Background="White" 
                           Grid.Column="0" 
                           Height="20"
                           Padding="5,0,0,0" 
                           Margin="1" 
                           Foreground="#1976D2"/>
                </Grid>
            </DataTemplate>
        </GroupBox.HeaderTemplate>

        <StackPanel>
            <Expander Header="Nouvelle Compétition" IsExpanded="False" Margin="0,5" >
                <StackPanel  Height="152" >
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Nom" Width="50"></Label>
                        <TextBox Height="23" TextWrapping="Wrap" Name="TextBoxNom" Text="{Binding NomNouvelleCompetition}" Margin="10,5" GotFocus="TextBox_GotFocus" ToolTip="Nom" Width="250" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Lieu" Width="50"></Label>
                        <TextBox Height="23" TextWrapping="Wrap" Name="TextBoxLieu"  Text="{Binding LieuNouvelleCompetition}" Margin="10,5" GotFocus="TextBox_GotFocus_1" ToolTip="Lieu" Width="250" HorizontalAlignment="Left" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Date" Width="50"></Label>
                        <DatePicker Name="SelecteurDate" SelectedDate="{Binding DateNouvelleCompetition}" Margin="10,5" Width="250" HorizontalAlignment="Left"/>
                    </StackPanel>
                    <Button Style="{StaticResource MyButtonValidateStyle}"  Click="NouvelleCompetition_Click_1" Height="40" Width="260" Margin="0,5" Name="BoutonNouvelleCompetition" IsEnabled="{Binding EnableButtons}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Create_White.png" Width="30" Height="30" Margin="5,0"></Image>
                            <TextBlock Text="Créer Compétition" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Expander>
            <Separator Height="10" Margin="0" Width="200" Background="Black"/>
            <Button Style="{StaticResource MyButtonValidateStyle}"  x:Name="BoutonOuvrirCompetition"  Height="40" Width="260" Click="OuvrirCompetition_Click" Margin="0,10" IsEnabled="{Binding EnableButtons}" SnapsToDevicePixels="True">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/FileOpen_White.png" Height="30" Width="30" Margin="5,0"></Image>
                    <TextBlock Text="Ouvrir Compétition" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Style="{StaticResource MyButtonStyle}"  Click="BoutonTelechargerFichierImport_Click" Height="40" Width="260" Margin="0,5" Name="BoutonTelechargerFichierImport" IsEnabled="{Binding EnableButtons}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Download_White.png" Width="30" Height="30" Margin="5,0"></Image>
                    <TextBlock Text="Télécharger Fichier Import" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Style="{StaticResource MyButtonStyle}"  Height="40" Width="260" Margin="0,5" Click="BoutonAide_Click" Name="BoutonAide" IsEnabled="{Binding EnableButtons}">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Help_White.png" Width="30" Height="30" Margin="10,0"></Image>
                    <TextBlock Text="Aide" VerticalAlignment="Center"></TextBlock>
                </StackPanel>
                <Button.Resources>
                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </GroupBox>
</Window>
