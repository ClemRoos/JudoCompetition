<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:const="clr-namespace:CompetitionJudo.UI.Properties"
    xmlns:local="clr-namespace:CompetitionJudo.UI"
    x:Class="CompetitionJudo.UI.FenetreCompetition"   
    Background="WhiteSmoke" 
    FontFamily="Segoe UI " 
    FontSize="16" 
    WindowState="Maximized"
    WindowStyle="ThreeDBorderWindow"
    Width="1366"
    Height="768"
    Title="{Binding WindowTitle}">


    <Window.Resources>
        <local:ColorationColonnesCompetiteurs x:Key="ColorationColonnesCompetiteurs"/>
        <local:ColorationColonnesGroupes x:Key="ColorationColonnesGroupes"/>
        
        <Style x:Key="MyButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#3271EA" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Name="wrapper"
                         Background="#01000000">
                            <Border Name="inner"
                             Background="{TemplateBinding Background}">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4E8FF8"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyButtonDeleteStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#F55E57" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border 
                            Name="wrapper"
                            Background="#01000000">
                            <Border 
                                Name="inner"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter Margin="{TemplateBinding Padding}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF8983"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="MyButtonValidateStyle" TargetType="{x:Type Button}">
            <Setter Property="Background" Value="#44C265" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Control.Template">
                <Setter.Value>
                    <ControlTemplate 
                        TargetType="{x:Type Button}">
                        <Border 
                            Name="wrapper"
                            Background="#01000000">
                            <Border 
                                Name="inner"
                                Background="{TemplateBinding Background}">
                                <ContentPresenter 
                                    Margin="{TemplateBinding Padding}"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center" />
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#80DA88"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="1"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="Background" Value="LightGray"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <DockPanel >
        <StackPanel DockPanel.Dock="Left">
            <GroupBox BorderThickness="2"
                      BorderBrush="#3271EA" 
                      Foreground="#3271EA"
                      Background="White"
                      Header="Ajout competiteur"  
                      Margin="5,5,5,5" 
                      Width="340" 
                      MaxWidth="500">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" >
                    <StackPanel HorizontalAlignment="Left"  VerticalAlignment="Top" Width="130">
                        <GroupBox BorderThickness="2"
                          BorderBrush="#3271EA" 
                          Foreground="#3271EA"
                          Header="Nom">
                            <TextBox 
                                BorderThickness="0"
                                Name="NouveauCompetiteurNom" 
                                TextWrapping="Wrap" 
                                Text="{Binding NouveauCompetiteurNom,UpdateSourceTrigger=PropertyChanged}" 
                                GotFocus="texteNom_GotFocus" />

                        </GroupBox>

                        <GroupBox BorderThickness="2"
                          BorderBrush="#3271EA" 
                          Foreground="#3271EA"
                          Header="Prénom">
                            <TextBox 
                                BorderThickness="0"
                                x:Name="NouveauCompetiteurPrenom" 
                                TextWrapping="Wrap" 
                                Text="{Binding NouveauCompetiteurPrenom,UpdateSourceTrigger=PropertyChanged}" 
                                GotFocus="textePrenom_GotFocus"/>
                        </GroupBox>

                        <GroupBox BorderThickness="2"
                          BorderBrush="#3271EA" 
                          Foreground="#3271EA"
                          Header="Poids">
                            <TextBox 
                                BorderThickness="0"
                                x:Name="NouveauCompetiteurPoids" 
                                TextWrapping="Wrap" 
                                Text="{Binding NouveauCompetiteurPoids,UpdateSourceTrigger=PropertyChanged}" 
                                GotFocus="textePoids_GotFocus"
                                 PreviewTextInput="textePoids_PreviewTextInput"/>
                        </GroupBox>

                        <GroupBox BorderThickness="2"
                          BorderBrush="#3271EA" 
                          Foreground="#3271EA"
                          Header="Club">
                            <ComboBox 
                                BorderThickness="0"
                                x:Name="NouveauCompetiteurListeClubs" 
                                Text="{Binding NouveauCompetiteurClub,UpdateSourceTrigger=PropertyChanged}" 
                                ItemsSource="{Binding ListeClubs}" 
                                IsEditable="True" 
                                GotFocus="listeClub_GotFocus" />
                        </GroupBox>

                        <GroupBox BorderThickness="2"
                          BorderBrush="#3271EA" 
                          Foreground="#3271EA"
                          Header="Catégorie">
                            <ComboBox 
                                BorderThickness="0"
                                x:Name="NouveauCompetiteurListeCategories" 
                                Text="{Binding NouveauCompetiteurCategorie,UpdateSourceTrigger=PropertyChanged}" 
                                IsEditable="True" 
                                ItemsSource="{Binding ListeCategoriesSansTous}" 
                                GotFocus="listeCategorie_GotFocus" 
                                IsReadOnly="True" />
                        </GroupBox>


                    </StackPanel>
                    <StackPanel Margin="5,0,0,0">
                        <GroupBox 
                            Header="Sexe" 
                            Height="87"
                            BorderThickness="2"
                          BorderBrush="#3271EA" 
                          Foreground="#3271EA">
                            <StackPanel Orientation="Horizontal" >
                                <Image Name="ImageGarcon" Source="/Resources/Boy.png" Width="45" ToolTip="Masculin" ></Image>
                                <Slider x:Name="barreSexe"  Background="#FFE4E4E4" Value="{Binding NouveauCompetiteurSexe,UpdateSourceTrigger=PropertyChanged}" Minimum="0" Maximum="2" SmallChange="1" Cursor="Arrow" Width="80" Height="22" />
                                <Image Name="ImageFille" Source="/Resources/Girl.png" Width="40" ToolTip="Féminine"></Image>
                            </StackPanel>
                        </GroupBox>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox 
                                VerticalAlignment="Center"
                                x:Name="checkPresent"
                                IsChecked="{Binding NouveauCompetiteurEstPresent, UpdateSourceTrigger = PropertyChanged }" 
                                Margin="5"
                                BorderBrush="#3271EA">
                                <CheckBox.LayoutTransform>
                                    <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                </CheckBox.LayoutTransform>
                            </CheckBox>
                            <Label Content="Présent"/>
                        </StackPanel>

                        <Button 
                            x:Name="boutonAjouterCompetiteur" 
                            Command="{Binding ClickButtonAjouterCompetiteur}" 
                            IsEnabled="{Binding IsCompetiteurValide, UpdateSourceTrigger = PropertyChanged }" 
                            HorizontalAlignment="Right" 
                            Width="140" 
                            Margin="10,0" 
                            Height="40" 
                            Style="{StaticResource MyButtonValidateStyle}" >
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <StackPanel Orientation="Horizontal">
                                <Image  Name="ImageAjouter" Source="/Resources/AddPerson_White.png" Width="25" Height="25" Margin="5,0"/>
                                <TextBlock VerticalAlignment="Center">
                                     <Run Foreground="White" >Ajouter</Run>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                        
                        <Button x:Name="boutonSupprimerCompetiteur" 
                                HorizontalAlignment="Right" 
                                Margin="10,5" 
                                Height="40" 
                                Width="140" 
                                Click="boutonSupprimerCompetiteur_Click"
                                BorderThickness="0"
                                Style="{StaticResource MyButtonDeleteStyle}">

                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                            <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="Auto" Height="Auto">
                                <Image DockPanel.Dock="Left" Name="ImageSupprimer" Source="/Resources/Delete_White.png" Width="25" Height="25"/>
                                <TextBlock VerticalAlignment="Center" DockPanel.Dock="Right">
                                    <Run Foreground="White" >Supprimer</Run>
                                </TextBlock>
                            </DockPanel>
                        </Button>
                        <Button x:Name="boutonImporterCompetiteurs" Content="Importer compétiteurs" Margin="10,5" Height="40" Visibility="Collapsed"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox BorderThickness="2"
                      BorderBrush="#3271EA" 
                      Foreground="#3271EA"
                      Header="Fonctions" 
                      Width="340" 
                      MaxWidth="600" 
                      Margin="5,5,5,5">
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Margin="5,5,5,5">
                    <StackPanel>
                        
                        <Button x:Name="boutonGenererPoules" HorizontalAlignment="Right" Width="170" Margin="10,5" Height="40" Command="{Binding ClickGenererGroupes}" Style="{StaticResource MyButtonValidateStyle}" >
                            <StackPanel Orientation="Horizontal">
                                <Image  Name="ImageGenerer" Source="/Resources/Generate_White.png" Width="25" Height="30" Margin="5,0"/>
                                <TextBlock Text="Génerer poules" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="PreviewMouseDown">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation 
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                            To="#00381F"
                                            Duration="0:0:1"/>
                                            <ColorAnimation 
                                            Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                            To="#80DA88"
                                            Duration="0:0:1"/>                      
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        
                        <Button x:Name="boutonImprimer" Height="40"  Margin="10,5" Width="140" Command="{Binding ClickImprimerGroupes}" Click="boutonGenererUnGroupe_Click" Style="{StaticResource MyButtonValidateStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="ImageImprimer" Source="/Resources/Print_White.png" Width="25" Height="30" Margin="5,0"/>
                                <TextBlock Text="Imprimer" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                        
                        <Button x:Name="boutonEnregistrerCompetition" Margin="10,5" Height="40" Width="140" Command="{Binding ClickButtonEnregistrerCompetition}" Style="{StaticResource MyButtonValidateStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Name="ImageEnregistrer" Source="/Resources/Save_White.png" Width="30" Height="30" Margin="5,0"/>
                                <TextBlock Text="Enregistrer" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Button.Triggers>
                                <EventTrigger RoutedEvent="PreviewMouseDown">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation 
                                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                To="#00381F"
                                                Duration="0:0:1"/>
                                            <ColorAnimation 
                                                Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                To="#80DA88"
                                                Duration="0:0:1"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Button.Triggers>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>                                    
                                </Style>
                                
                            </Button.Resources>
                       
                        </Button>
                    </StackPanel>

                </StackPanel>
            </GroupBox>
            <GroupBox BorderThickness="2"
                      BorderBrush="#3271EA" 
                      Foreground="#3271EA"
                      Header="Options" 
                      Width="340"  
                      Margin="5,5,5,5">
                <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,5,5,5">
                    <StackPanel Orientation="Vertical">
                        <Button x:Name="boutonImporterExcel" HorizontalAlignment="Right" Width="140" Margin="10,5" Height="40" Click="boutonImporterExcel_Click" Style="{StaticResource MyButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image  Name="ImageImporter" Source="/Resources/Import_White.png" Width="25" Height="25" Margin="5,0"/>
                                <TextBlock Text="Importer" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                                
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <Button Name="boutonParametres" HorizontalAlignment="Right" Width="140" Margin="10,5" Height="40" Click="boutonParametres_Click" Style="{StaticResource MyButtonStyle}">
                            <StackPanel Orientation="Horizontal">
                                <Image Source="/Resources/Settings_White.png" Width="25" Height="25" Margin="5,0"/>
                                <TextBlock Text="Paramètres" VerticalAlignment="Center"></TextBlock>
                            </StackPanel>
                            <Button.Resources>
                                <Style TargetType="{x:Type Border}">
                                    <Setter Property="CornerRadius" Value="5"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox BorderThickness="2"
                      BorderBrush="#3271EA" 
                      Foreground="#3271EA"
                      Header="Stats" 
                      MaxWidth="600" 
                      Margin="5,5,5,5">
                <StackPanel Orientation="Vertical">
                    <Expander>
                        <Expander.Header>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Inscrits" />
                                <Label Content="{Binding StatsCompetiteursPresents}" />
                            </StackPanel>
                        </Expander.Header>
                        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="100">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                    <RowDefinition Height="20" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Content="Total" Grid.Row="0" Grid.Column="1" Padding="0"/>
                                <Label Content="M" Grid.Row="0" Grid.Column="2" Padding="0"/>
                                <Label Content="F" Grid.Row="0" Grid.Column="3" Padding="0"/>
                                <Label Content="Mini Poussins" Grid.Row="1" Grid.Column="0" Padding="0"/>
                                <Label Content="Poussins" Grid.Row="2" Grid.Column="0" Padding="0"/>
                                <Label Content="Benjamins" Grid.Row="3" Grid.Column="0" Padding="0"/>
                                <Label Content="Minimes" Grid.Row="4" Grid.Column="0" Padding="0"/>
                                <Label Content="Cadets" Grid.Row="5" Grid.Column="0" Padding="0"/>
                                <Label Content="Juniors" Grid.Row="6" Grid.Column="0" Padding="0"/>
                                <Label Content="Seniors" Grid.Row="7" Grid.Column="0" Padding="0"/>
                                <Label Content="{Binding StatsMPPresents}" Grid.Row="1" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsMPMPresents}" Grid.Row="1" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsMPFPresents}" Grid.Row="1" Grid.Column="3" Padding="0"/>
                                <Label Content="{Binding StatsPPresents}" Grid.Row="2" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsPMPresents}" Grid.Row="2" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsPFPresents}" Grid.Row="2" Grid.Column="3" Padding="0"/>
                                <Label Content="{Binding StatsBPresents}" Grid.Row="3" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsBMPresents}" Grid.Row="3" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsBFPresents}" Grid.Row="3" Grid.Column="3" Padding="0"/>
                                <Label Content="{Binding StatsMPresents}" Grid.Row="4" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsMMPresents}" Grid.Row="4" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsMFPresents}" Grid.Row="4" Grid.Column="3" Padding="0"/>
                                <Label Content="{Binding StatsCPresents}" Grid.Row="5" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsCMPresents}" Grid.Row="5" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsCFPresents}" Grid.Row="5" Grid.Column="3" Padding="0"/>
                                <Label Content="{Binding StatsJPresents}" Grid.Row="6" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsJMPresents}" Grid.Row="6" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsJFPresents}" Grid.Row="6" Grid.Column="3" Padding="0"/>
                                <Label Content="{Binding StatsSPresents}" Grid.Row="7" Grid.Column="1" Padding="0"/>
                                <Label Content="{Binding StatsSMPresents}" Grid.Row="7" Grid.Column="2" Padding="0"/>
                                <Label Content="{Binding StatsSFPresents}" Grid.Row="7" Grid.Column="3" Padding="0"/>
                            </Grid>
                        </ScrollViewer>
                    </Expander>
                    <Button Name="ButtonResultatClub" Width="120" Height="40" Margin="10,10" Click="ButtonResultatClub_Click" Style="{StaticResource MyButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/Stats_White.png" Width="25" Height="25" Margin="5,5"/>
                            <TextBlock Text="Résultats" VerticalAlignment="Center"></TextBlock>
                        </StackPanel>
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="5"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </GroupBox>

        </StackPanel>
        <Grid  Margin="5,5,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"  MinHeight="30"/>
                <RowDefinition Height="*" MinHeight="30" />
            </Grid.RowDefinitions>

            <GroupBox BorderThickness="2"
                      BorderBrush="#3271EA" 
                      Foreground="#3271EA"
                      Header="Compétiteurs" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      DockPanel.Dock="Right" 
                      Grid.Row="0">
                <DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <DataGrid 
                        BorderThickness="0"
                        IsSynchronizedWithCurrentItem="True" 
                        ItemsSource="{Binding Path=ListeCompetiteurs}" 
                        Margin="5" 
                        Name="grilleCompetiteurs" 
                        IsReadOnly="False" 
                        AutoGenerateColumns="False" 
                        CanUserResizeRows="False"
                        CanUserAddRows="False" 
                        CanUserDeleteRows="False" 
                        CanUserReorderColumns="True" 
                        CanUserSortColumns="True" 
                        RowEditEnding="KeyEditCompetiteur"
                        MouseLeftButtonDown="grilleCompetiteurs_MouseLeftButtonDown">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Height" Value="35" />
                                <Setter Property="Background" Value="#3271EA" />
                                <Setter Property="Foreground" Value="White" />
                                <Setter Property="BorderBrush" Value="Black" />
                                <Setter Property="BorderThickness" Value="1" />
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Opacity" Value="1"/>
                                        <Setter Property="Foreground" Value="Black"/>
                                        <Setter Property="Background" Value="LightGray"/>
                                    </Trigger>

                                </Style.Triggers>
                            </Style>

                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.RowStyle>
                            <Style TargetType="DataGridRow">
                                <Setter Property="Background" Value="{Binding Converter={StaticResource ColorationColonnesCompetiteurs}}"/>
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridCheckBoxColumn Binding="{Binding EstPresent, UpdateSourceTrigger=PropertyChanged}"  Width="0.8*">
                                <DataGridCheckBoxColumn.Header>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <ComboBox 
                                            Name="FiltreColonneEstPrésent" 
                                            SelectionChanged="FiltresGrille_SelectionChanged" 
                                            IsSynchronizedWithCurrentItem="True"
                                            IsReadOnly="True" 
                                            IsEditable="False" 
                                            HorizontalAlignment="Right"/>
                                    </StackPanel>
                                </DataGridCheckBoxColumn.Header>
                                <DataGridCheckBoxColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height" Value="33" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="Background" Value="#3271EA" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="BorderBrush" Value="Black" />
                                        <Setter Property="BorderThickness" Value="0.5,0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4E8FF8"/>
                                            </Trigger>                                           
                                        </Style.Triggers>
                                    </Style>
                                </DataGridCheckBoxColumn.HeaderStyle>
                            </DataGridCheckBoxColumn>

                            <DataGridTextColumn 
                                Header="Poule" 
                                Binding="{Binding IndexGroupe,TargetNullValue=''}" 
                                Width="0.5*" >
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height" Value="33" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="Background" Value="#3271EA" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="BorderBrush" Value="Black" />
                                        <Setter Property="BorderThickness" Value="0.5,0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4E8FF8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn 
                                Binding="{Binding Nom}" 
                                Width="2*" >
                                <DataGridTextColumn.Header>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Nom" />
                                        <TextBox Name="FiltreColonneNom" Width="140" Margin="10,0,0,0"  TextChanged="FiltreColonnesNomPrenom_TextChanged" GotFocus="FiltreColonneNom_GotFocus"></TextBox>
                                    </StackPanel>
                                </DataGridTextColumn.Header>
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="Height" Value="33" />
                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                        <Setter Property="Background" Value="#3271EA" />
                                        <Setter Property="Foreground" Value="White" />
                                        <Setter Property="BorderBrush" Value="Black" />
                                        <Setter Property="BorderThickness" Value="0.5,0" />
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#4E8FF8"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Margin" Value="10,0" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

